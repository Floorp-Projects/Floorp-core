{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frog Build Tools jar manifest schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "jars": {
      "type": "object",
      "patternProperties": {
        "*.jar": {
          "type": "object",
          "properties": {
            "chrome": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "object",
                  "properties": {
                    "pkgname": {
                      "type": "string"
                    },
                    "uri": {
                      "type": "string"
                    },
                    "flags": {
                      "type": "array"
                    }
                  }
                }
              },
              "maxProperties": 1,
              "description": "https://firefox-source-docs.mozilla.org/build/buildsystem/chrome-registration.html#chrome-registration"
            },
            "prefixPath": {
              "type": "string",
              "description": "In jar.mn, the prefixPath is applied to all virtual file path"
            },
            "content": {
              "type": "object",
              "properties": {
                "normal": {
                  "type": "object",
                  "patternProperties": {
                    "*": {
                      "type": "object",
                      "properties": { "path": { "type": "string" } }
                    }
                  }
                },
                "preprocess": {
                  "type": "object",
                  "patternProperties": {
                    "*": {
                      "type": "object",
                      "properties": { "path": { "type": "string" } }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["mozilla"],
  "additionalProperties": false
}
